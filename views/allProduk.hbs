{{! views/allProduk.hbs }}
<!DOCTYPE html>
<html lang="en">
<head>
  {{> header}}
</head>
<body>
    {{> navbar_main}}

    <header class="category-header py-4 py-lg-5 bg-light border-bottom">
        <div class="container text-center">
            <nav aria-label="breadcrumb" class="mb-2 justify-content-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item"><a href="/allProduk">Shop</a></li>
                    {{#if currentCategoryName}} {{! Anda perlu mengirim ini dari controller jika filter by category }}
                        <li class="breadcrumb-item active" aria-current="page">{{currentCategoryName}}</li>
                    {{else if currentStyleName}} {{! Anda perlu mengirim ini dari controller jika filter by style }}
                        <li class="breadcrumb-item active" aria-current="page">{{currentStyleName}}</li>
                    {{/if}}
                </ol>
            </nav>
            <h1 class="fw-bold">{{pageTitle}}</h1>
            <p class="lead text-muted">{{filterDescription}}</p>
        </div>
    </header>

    <main class="container my-4 my-lg-5">
        <div class="row">
            {{!-- Sidebar Filter (Kolom Kiri) --}}
            <aside class="col-lg-3">
                <div class="filters-sidebar p-3 rounded-3 shadow-sm border mb-4 mb-lg-0">
                    <h5 class="fw-semibold mb-3">Filters</h5>
                    
                    {{!-- Filter Kategori --}}
                    <div class="filter-group mb-4">
                        <h6 class="filter-title mb-2">Categories</h6>
                        <ul class="list-unstyled filter-list">
                            <li><a href="/allProduk" class="filter-link {{#unless currentCategoryId}}active{{/unless}}">All Categories</a></li>
                            {{#each allCategories}}
                            <li>
                                <a href="/allProduk?category_id={{this.id}}" 
                                   class="filter-link {{#if (eq ../currentCategoryId (toString this.id))}}active{{/if}}">
                                   {{this.name}}
                                </a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                    {{!-- Filter Style --}}
                    <div class="filter-group mb-4">
                        <h6 class="filter-title mb-2">Dress Style</h6>
                        <ul class="list-unstyled filter-list">
                             <li><a href="/allProduk" class="filter-link {{#unless currentStyleSlug}}active{{/unless}}">All Styles</a></li>
                            {{#each allStyles}}
                            <li>
                                <a href="/allProduk?style={{this.slug}}" 
                                   class="filter-link {{#if (eq ../currentStyleSlug this.slug)}}active{{/if}}">
                                   {{this.name}}
                                </a>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                    <div class="filter-group mb-4">
                        <h6 class="filter-title mb-2">Size</h6>
                        <div class="size-selector-filter btn-group flex-wrap gap-1">
                            <button type="button" class="btn btn-sm btn-outline-secondary size-filter-option">XS</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary size-filter-option active">S</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary size-filter-option">M</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary size-filter-option">L</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary size-filter-option">XL</button>
                        </div>
                    </div>

                    {{!-- Filter Warna (Placeholder) --}}
                    <div class="filter-group mb-4">
                        <h6 class="filter-title mb-2">Color</h6>
                        <div class="color-swatches-filter d-flex flex-wrap gap-1">
                            <button type="button" class="color-swatch-filter" style="background-color: black;" title="Black"></button>
                            <button type="button" class="color-swatch-filter active" style="background-color: white; border: 1px solid #ccc;" title="White"></button>
                            <button type="button" class="color-swatch-filter" style="background-color: red;" title="Red"></button>
                            <button type="button" class="color-swatch-filter" style="background-color: blue;" title="Blue"></button>
                            <button type="button" class="color-swatch-filter" style="background-color: green;" title="Green"></button>
                        </div>
                    </div>

                    {{!-- Filter Harga (Placeholder - memerlukan slider atau input range) --}}
                    <div class="filter-group mb-4">
                        <h6 class="filter-title mb-2">Price Range</h6>
                        <input type="range" class="form-range" id="priceRangeFilter">
                        <div class="d-flex justify-content-between">
                            <small>Rp 0</small>
                            <small>Rp 1.000.000+</small>
                        </div>
                    </div>
                    
                    <button class="btn btn-dark w-100" type="button">Apply Filters</button>
                </div>
            </aside>

            {{!-- Daftar Produk (Kolom Kanan) --}}
            <section class="col-lg-9 product-listing-content">
                <div class="d-flex justify-content-between align-items-center mb-3 product-list-controls">
                    <span class="text-muted">Showing {{products.length}} results</span>
                    <div class="d-flex gap-2">
                        <select class="form-select form-select-sm" style="width: auto;">
                            <option selected>Sort by: Latest</option>
                            <option value="price_asc">Price: Low to High</option>
                            <option value="price_desc">Price: High to Low</option>
                            <option value="rating">Rating</option>
                        </select>
            
                    </div>
                </div>

                {{#if products.length}}
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                        {{#each products}}
                        <div class="col">
                            <div class="product-card-new custom-card h-100">
                                <a href="/product/{{this.id}}" class="product-image-link">
                                    <img src="{{this.image_url}}" class="card-img-top product-card-img" alt="{{this.name}}">
                                </a>
                                <div class="card-body text-center product-card-body">
                                    <h5 class="product-name mb-2">{{this.name}}</h5>
                                    <div class="product-rating mb-2">
                                        {{{generateStars this.rating}}}
                                    </div>
                                    <p class="product-price fw-bold mb-0">{{{formatRupiah this.price}}}</p>
                                </div>
                                {{!-- Tombol Wishlist di Kartu Produk (jika diinginkan di sini) --}}
                                {{!-- 
                                {{#if ../user}}
                                    {{#if (neq this.user_id ../user.id)}}
                                    <button class="btn btn-sm btn-outline-danger favorite-icon-list" 
                                            data-product-id="{{this.id}}" 
                                            onclick="toggleWishlistCard(this, '{{this.id}}')">
                                        {{#if (includes ../wishlistProductIds (toString this.id))}}
                                            <i class="bi bi-heart-fill"></i>
                                        {{else}}
                                            <i class="bi bi-heart"></i>
                                        {{/if}}
                                    </button>
                                    {{/if}}
                                {{/if}}
                                --}}
                            </div>
                        </div>
                        {{/each}}
                    </div>
                   
                {{else}}
                    <div class="text-center py-5">
                        <i class="bi bi-search" style="font-size: 3rem; color: #6c757d;"></i>
                        <h4 class="mt-3">No products found</h4>
                        <p class="text-muted">Try adjusting your filters or check back later.</p>
                        <a href="/allProduk" class="btn btn-outline-secondary mt-2">Clear Filters</a>
                    </div>
                {{/if}}
            </section>
        </div>
    </main>

    {{> footer_main }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {{!-- <script src="/script.js"></script> --}} {{!-- Pindahkan fungsi umum ke sini jika ada --}}
    <script>
        // JavaScript untuk filter (placeholder)
        document.querySelectorAll('.size-filter-option').forEach(btn => {
            btn.addEventListener('click', function() {
                // Logika untuk toggle kelas active dan mengambil nilai filter
                this.classList.toggle('active');
                console.log('Size filter clicked:', this.textContent);
            });
        });
        document.querySelectorAll('.color-swatch-filter').forEach(swatch => {
            swatch.addEventListener('click', function() {
                this.classList.toggle('active');
                console.log('Color filter clicked:', this.title);
            });
        });

        // Jika Anda menggunakan tombol "Apply Filters" untuk mengirim semua filter sekaligus:
         document.querySelector('.filters-sidebar .btn-dark').addEventListener('click', function() {
            const selectedCategories = ...;
            const selectedStyles = ...;
            // Kumpulkan semua filter dan redirect atau fetch ulang
            window.location.href = `/allProduk?category=${...}&style=${...}&size=${...}`;
         });

    </script>
</body>
</html>