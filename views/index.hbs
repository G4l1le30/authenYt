        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
        <script>
            AOS.init({
                duration: 1000,  // durasi animasi dalam ms
                once: true,      // animasi hanya sekali ketika muncul
            });
            const newsletterForm = document.getElementById('newsletterForm');
if (newsletterForm) {
    const newsletterEmail = document.getElementById('newsletterEmail');
    const newsletterMessage = document.getElementById('newsletterMessage');

    newsletterForm.addEventListener('submit', function(event) {
        event.preventDefault();
        // Di sini Anda bisa menambahkan logika untuk mengirim email ke backend
        // Untuk contoh, kita hanya tampilkan pesan sukses
        if (newsletterEmail.value && newsletterEmail.checkValidity()) {
            newsletterMessage.textContent = 'Thank you for subscribing!';
            newsletterMessage.style.color = 'lightgreen'; // Atau warna yang sesuai
            newsletterEmail.value = ''; // Kosongkan input
        } else {
            newsletterMessage.textContent = 'Please enter a valid email address.';
            newsletterMessage.style.color = 'pink'; // Atau warna error
        }
        setTimeout(() => {
            newsletterMessage.textContent = '';
        }, 5000); // Hilangkan pesan setelah 5 detik
    });
}
            
