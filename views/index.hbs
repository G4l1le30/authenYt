<!DOCTYPE html>
<html lang="en">
    <head>
        {{> header}}
</head>

    <body>
        <!--navbar-->
       {{> navbar_main}}  


        <!-- Hero Section -->
        <section class="hero-main" style="background-image: url('/img/hero.jpg');">
    <div class="hero-overlay"></div> <div class="container hero-content text-center">
        <h1 class="hero-title display-4 fw-bold mb-4">FIND CLOTHES<br>THAT MATCHES<br>YOUR STYLE</h1>
        <div class="row hero-stats mt-5 pt-4 justify-content-center">
            <div class="col-6 col-md-auto hero-stat-item">
                <h2 class="fw-bold">200+</h2>
                <p class="mb-0">International Brands</p>
            </div>
            <div class="col-6 col-md-auto hero-stat-item">
                <h2 class="fw-bold">2,000+</h2>
                <p class="mb-0">High-Quality Products</p>
            </div>
            <div class="col-6 col-md-auto hero-stat-item">
                <h2 class="fw-bold">30,000+</h2>
                <p class="mb-0">Happy Customers</p>
            </div>
        </div>
    </div>
</section>

        <!-- Brands Section -->
        <section class="brands-bar-section bg-dark py-3"> <!- py-3 atau py-4 untuk padding atas bawah ->
    <div class="container">
        <div class="d-flex flex-wrap justify-content-around align-items-center">
            <div class="brand-item text-uppercase">Versace</div>
            <div class="brand-item text-uppercase">Zara</div>
            <div class="brand-item text-uppercase">Gucci</div>
            <div class="brand-item text-uppercase">Prada</div>
            <div class="brand-item text-uppercase">Calvin Klein</div>
            </div>
    </div>
</section>

        <!-- New Arrivals -->
        <section class="new-arrivals-section py-5"> <!- py-5 untuk padding atas bawah ->
    <div class="container">
        <h2 class="section-title">NEW ARRIVALS</h2> <div class="row g-4"> {{#each products}} <div class="col-lg-3 col-md-4 col-sm-6 mb-4"> <div class="product-card-new custom-card h-100"> <a href="/product/{{this.id}}" class="product-image-link">
                        <img src="{{this.image_url}}" class="card-img-top product-card-img" alt="{{this.name}}">
                    </a>
                    <div class="card-body text-center product-card-body"> <h5 class="product-name mb-2">{{this.name}}</h5>
                        
                        <div class="product-rating mb-2">
                            {{{generateStars this.rating}}} 

                        </div>

                        <p class="product-price fw-bold mb-0">{{formatRupiah this.price}}</p>
                        </div>
                </div>
            </div>
            {{else}}
            <div class="col">
                <p class="text-center">No new arrivals at the moment.</p>
            </div>
            {{/each}}
        </div>
        </div>
</section>

        <!-- Top Seller -->
        
<section class="top-sellers-section py-5 bg-light"> {{! Pastikan section ini ada }}
    <div class="container">
        <h2 class="section-title">TOP SELLERS</h2>
        <div class="row g-4"> {{! Pastikan row ini ada }}
            {{#each top_sellers}} {{! Pastikan loop ini ada }}
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="seller-card custom-card h-100 text-center">
                    <a href="/seller/{{this.id}}" class="seller-card-link">
                        <img src="{{this.profile_image_url}}" class="seller-avatar rounded-circle my-3" alt="{{this.name}}">
                        <div class="card-body seller-card-body">
                            <h5 class="seller-name mb-2">{{this.name}}</h5>
                            {{#if this.average_seller_rating}}
                            <div class="seller-rating mb-2"> 
                                <span class="product-rating-display"> 
                                    {{{generateStars (toFixed this.average_seller_rating 1)}}} 
                                </span>
                            </div>
                            {{else}}
                            <p class="seller-info small text-muted">(No product ratings yet)</p>
                            {{/if}}
                            {{#if this.product_count}}
                                <p class="seller-info small text-muted">{{this.product_count}} Product(s)</p>
                            {{/if}}
                        </div>
                    </a>
                </div>
            </div>
            {{else}}
            <div class="col">
                <p class="text-center">No top sellers featured at the moment.</p>
            </div>
            {{/each}}
        </div> {{! Penutup div.row untuk Top Sellers }}
    </div> {{! Penutup div.container untuk Top Sellers }}
</section> {{! Penutup section untuk Top Sellers }}


        <!-- Browse by Dress Style -->
        <section class="dress-style-section py-5">
    <div class="container">
        <h2 class="section-title">BROWSE BY DRESS STYLE</h2>
        <div class="row g-4">
            {{#each dress_styles}}
            <div class="col-md-6 col-lg-3 mb-4">
                <a href="/products?style={{this.slug}}" class="dress-style-card-link"> <div class="dress-style-card custom-card text-white" style="background-image: url('{{this.image_url}}');">
                        <div class="dress-style-card-overlay"></div>
                        <div class="dress-style-card-content">
                            <h3 class="dress-style-title">{{this.name}}</h3>
                        </div>
                    </div>
                </a>
            </div>
            {{else}}
            <p class="text-center">No dress styles available at the moment.</p>
            {{/each}}
        </div>
    </div>
</section>
